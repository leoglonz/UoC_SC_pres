% Headline and footline

\defbeamertemplate*{frametitle}{cambridge theme}
{%
  \vskip-1pt % HACK: Removes a bright line at the top of the page.
  \begin{beamercolorbox}[wd=\paperwidth,ht=3.0\cam@outer@pitch,dp=1.8\cam@outer@pitch,leftskip=2\cam@outer@pitch,sep=0pt]{palette primary}%
    \begin{beamercolorbox}[ht=0pt,sep=0pt]{}%
      \usebeamerfont{frametitle}\insertframetitle
    \end{beamercolorbox}
  \end{beamercolorbox}%
  \nointerlineskip
  \begin{beamercolorbox}[wd=\paperwidth,dp=0.9\cam@outer@pitch]{lower separation line head}%
  \end{beamercolorbox}%
}

% use 8.25 hspace without logo, and 7.5 with logo.
